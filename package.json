{
  "name": "steam-rom-manager",
  "version": "1.3.0",
  "license": "GPL-3.0",
  "description": "An app for managing ROMs in Steam",
  "author": {
    "name": "FrogTheFrog",
    "url": "https://github.com/FrogTheFrog",
    "email": "warliukz@gmail.com"
  },
  "build": {
    "appId": "FrogTheFrog.SteamROMManager",
    "productName": "Steam ROM Manager",
    "compression": "normal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "./images/icons/icon.ico"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./images/icons"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  },
  "main": "./dist/main.bundle.js",
  "repository": {
    "url": "https://github.com/FrogTheFrog/steam-rom-manager"
  },
  "scripts": {
    "build:main": "cross-env NODE_ENV=production webpack --config ./webpack/main.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/renderer.js",
    "build:win": "rimraf release && npm run build && build --win --ia32 --x64",
    "build:linux": "rimraf release && npm run build && build --linux --ia32 --x64",
    "build": "rimraf dist && npm run build:main && npm run build:renderer",
    "watch:main": "webpack --watch --config ./webpack/main.js",
    "watch:renderer": "webpack --watch --config ./webpack/renderer.js",
    "start": "./node_modules/.bin/electron ./dist/main.bundle.js",
    "clean": "rimraf dist release"
  },
  "dependencies": {
    "@angular/animations": "^4.0.3",
    "@angular/common": "^4.0.3",
    "@angular/compiler": "^4.0.3",
    "@angular/core": "^4.0.3",
    "@angular/forms": "^4.0.3",
    "@angular/http": "^4.0.3",
    "@angular/platform-browser": "^4.0.3",
    "@angular/platform-browser-dynamic": "^4.0.3",
    "@angular/router": "^4.0.3",
    "blob-to-buffer": "^1.2.6",
    "colornames": "^1.1.1",
    "crc": "^3.4.4",
    "fs-extra": "^2.1.2",
    "fuzzy": "^0.1.3",
    "glob": "^7.1.1",
    "is-color": "^0.2.0",
    "lodash": "^4.17.4",
    "long": "^3.2.0",
    "mime-types": "^2.1.15",
    "ngx-color-picker": "^4.0.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.3.0",
    "steam-shortcut-editor": "^3.0.0",
    "to-css": "^1.2.1",
    "vdf": "0.0.2",
    "zone.js": "^0.8.5"
  },
  "devDependencies": {
    "@types/crc": "^3.4.0",
    "@types/electron": "^1.4.37",
    "@types/fs-extra": "^2.1.0",
    "@types/glob": "^5.0.30",
    "@types/lodash": "^4.14.62",
    "@types/long": "^3.0.31",
    "@types/node": "^7.0.13",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.1.2",
    "cross-env": "^4.0.0",
    "css-loader": "^0.28.0",
    "extract-zip": "=1.6.0",
    "electron": "^1.6.7",
    "electron-builder": "^17.0.1",
    "extract-text-webpack-plugin": "^2.1.0",
    "file-loader": "^0.11.1",
    "html-loader": "^0.4.5",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "postcss": "^5.2.17",
    "postcss-loader": "^1.3.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.3",
    "to-string-loader": "^1.1.5",
    "typescript": "^2.2.2",
    "webpack": "^2.4.1",
    "webpack-merge": "^4.1.0"
  }
}
