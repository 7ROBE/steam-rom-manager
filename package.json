{
  "name": "steam-rom-manager",
  "version": "2.2.7",
  "license": "GPL-3.0",
  "description": "An app for managing ROMs in Steam",
  "author": {
    "name": "FrogTheFrog",
    "url": "https://github.com/FrogTheFrog",
    "email": "warliukz@gmail.com"
  },
  "build": {
    "appId": "FrogTheFrog.SteamROMManager",
    "productName": "Steam ROM Manager",
    "compression": "normal",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "./src/assets/icons/win.ico"
    },
    "portable": {
      "artifactName": "${productName}-portable-${version}.${ext}"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "./src/assets/icons"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ],
      "icon": "./src/assets/icons/mac.icns"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ]
  },
  "main": "./dist/main.bundle.js",
  "repository": {
    "url": "https://github.com/FrogTheFrog/steam-rom-manager"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "./node_modules/.bin/electron ./dist/main.bundle.js",
    "watch:main": "webpack --watch --config ./webpack/main.js",
    "watch:renderer": "webpack --watch --config ./webpack/renderer.js",
    "build:main": "cross-env NODE_ENV=production webpack --config ./webpack/main.js",
    "build:renderer": "cross-env NODE_ENV=production webpack --config ./webpack/renderer.js",
    "build:dist": "rimraf dist && npm run build:main && npm run build:renderer",
    "build:win": "build --win --ia32 --x64",
    "build:linux": "build --linux --ia32 --x64",
    "build:mac": "build --mac --ia32 --x64"
  },
  "dependencies": {
    "@angular/animations": "^4.4.6",
    "@angular/common": "^4.4.6",
    "@angular/compiler": "^4.4.6",
    "@angular/core": "^4.4.6",
    "@angular/forms": "^4.4.6",
    "@angular/http": "^4.4.6",
    "@angular/platform-browser": "^4.4.6",
    "@angular/platform-browser-dynamic": "^4.4.6",
    "@angular/router": "^4.4.6",
    "@types/rangy": "0.0.31",
    "ajv": "^5.3.0",
    "async": "^2.6.0",
    "blob-to-buffer": "^1.2.6",
    "bluebird": "^3.5.1",
    "colornames": "^1.1.1",
    "crc": "^3.5.0",
    "electron-window-state": "^4.1.1",
    "fs-extra": "^4.0.2",
    "fuzzaldrin-plus": "^0.5.0",
    "glob": "^7.1.2",
    "he": "^1.1.1",
    "highlight.js": "^9.12.0",
    "is-color": "^0.2.0",
    "loader-utils": "^1.1.0",
    "lodash": "^4.17.4",
    "long": "^3.2.0",
    "markdown-it": "^8.4.0",
    "markdown-it-anchor": "^4.0.0",
    "markdown-it-attrs": "^0.8.0",
    "mime-types": "^2.1.17",
    "minimatch": "^3.0.4",
    "ng-dynamic": "^3.0.2",
    "ngx-color-picker": "^4.5.0",
    "os-name": "^2.0.1",
    "rangy": "^1.3.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.2",
    "save-dev": "^2.0.0",
    "steam-shortcut-editor": "^3.0.0",
    "to-css": "^1.2.1",
    "vdf": "^0.0.2",
    "zone.js": "^0.8.18"
  },
  "devDependencies": {
    "@types/async": "^2.0.45",
    "@types/bluebird": "^3.5.18",
    "@types/crc": "^3.4.0",
    "@types/fs-extra": "^4.0.3",
    "@types/fuzzaldrin-plus": "0.0.1",
    "@types/glob": "^5.0.33",
    "@types/he": "^0.5.29",
    "@types/highlight.js": "^9.1.10",
    "@types/lodash": "^4.14.82",
    "@types/long": "^3.0.32",
    "@types/markdown-it": "0.0.4",
    "@types/minimatch": "^3.0.1",
    "@types/node": "^8.0.49",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.3.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.7",
    "debug-loader": "0.0.1",
    "electron": "^1.7.9",
    "electron-builder": "^19.45.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.1",
    "html-webpack-plugin": "^2.30.1",
    "nested-require-loader": "^0.2.1",
    "node-sass": "^4.6.0",
    "null-loader": "^0.1.1",
    "postcss": "^6.0.14",
    "postcss-loader": "^2.0.8",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.6.2",
    "sass-loader": "^6.0.6",
    "to-string-loader": "^1.1.5",
    "typescript": "^2.6.1",
    "webpack": "^3.8.1",
    "webpack-merge": "^4.1.1",
    "worker-loader": "^1.1.0"
  }
}
